<div id="header">
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <%= link_to(image_tag("logo.png"), root_path, class: "navbar-brand") %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="glyphicon glyphicon-resize-vertical"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-right non-usernav">
        <%- if controller_name != 'sessions' %>
            <li>
              <%= link_to new_session_path(resource_name) do %>
                  <span class="glyphicon glyphicon-log-in"></span>
                  <span class="txt"> Sign in</span>
              <% end %>
            </li>
        <% end -%>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <li>
              <%= link_to new_registration_path(resource_name) do %>
                  <span class="glyphicon glyphicon-th"></span>
                  <span class="txt"> Sign Up</span>
              <% end %>
            </li>
        <% end -%>
      </ul>
    </div>
    <!--/.nav-collapse -->
  </nav>
  <!--/navbar -->
</div>
