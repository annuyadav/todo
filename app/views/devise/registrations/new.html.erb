<div class="signUpContainer">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :first_name, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.text_field :first_name, class: 'form-control uniform-input text', placeholder: 'First Name', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.text_field :last_name, class: 'form-control uniform-input text', placeholder: 'Last Name' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.email_field :email, class: 'form-control uniform-input text valid', placeholder: 'Email' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.password_field :password, class: 'form-control uniform-input text valid', placeholder: 'Password', autocomplete: 'off', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.password_field :password_confirmation, class: 'form-control uniform-input text valid', placeholder: 'Confirm Password', autocomplete: 'off', required: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-lg-12 form-actions text-center">
          <div class="action_div">
            <button class="btn btn-info" type="submit">
              Sign up
            </button>
            <div class="clearfix"></div>
          </div>
          <div>
           <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
          </div>
        </div>
      </div>
  <% end %>
</div>