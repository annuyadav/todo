<div class="signUpContainer">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-lg-12 control-label' %>
        <div class="col-lg-12">
          <%= f.email_field :email, class: 'form-control uniform-input text', placeholder: 'Email', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 form-actions text-center">
          <div class="action_div">
            <button class="btn btn-info" type="submit">
              Resend unlock instructions
            </button>
          </div>
        </div>
      </div>
  <% end %>
</div>