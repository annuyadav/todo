<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">ToDo Item</h4>
</div>
<div class="modal-body">
  <%= form_for(todo_item, as: :todo_item, url: :add_todo_item_todo_list, remote: true) do |f| %>

      <div class="field form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-default btn-primary pull-right", data: {disable_with: 'Saving...'} %>
        <div class="clearfix"></div>
      </div>
  <% end %>
</div>