<div class='move-bottom'>
  <div class="col-lg-12">
    <h2 class="page-header"><%= @todo_list.name %>
    <p class="owner_info">
      <b>Owner: </b> <%= @todo_list.owner.full_name %>
    </p>
    </h2>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <p class="description-short"><%= @todo_list.description %></p>
    </div>
    <div class="col-xs-6 marginB10 text-right">
      <%= link_to edit_todo_list_path(@todo_list), class: 'btn btn-default', remote: true do %>
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          Edit
      <% end %>
      <%= link_to new_todo_item_todo_list_path(@todo_list), class: 'btn btn-primary', remote: true do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          Add New ToDo Item
      <% end %>
    </div>

  </div>

  <div class="col-lg-12">
    <div id="newtabs">
      <%= render partial: 'todo_lists/list_tabs', locals: {todo_list: @todo_list} %>
    </div>
  </div>

</div>